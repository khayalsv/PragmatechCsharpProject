@using WebApplication.ViewModels 

@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}




<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label>City</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(x=>x.SelectCityId, Model.CitiesData, "Secin", new { @class = "form-control dropdown" })
                    </div>
                </div>
                <div class="form-group">
                    <label>Country</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(x=>x.SelectCountryId, Model.CountryData, "Secin", new { @class = "form-control dropdown" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <button class="btn btn-success" type="submit">Send</button>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <div class="alert alert-info">
                            Selected Country ID: @Model.SelectCountryId
                            Selected City ID: @Model.SelectCityId
                        </div>
                    </div>
                </div>
            </div>


        }

    </div>
</div>



