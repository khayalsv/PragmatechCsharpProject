@model ProjectAbout

@{
    ViewData["Title"] = "Edit";
}

<form method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="All"></div>*@

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input class="form-control" type="text" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Text</label>
        <input class="form-control" type="text" asp-for="Text" />
        <span asp-validation-for="Text"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">BoxText</label>
        <input class="form-control" type="text" asp-for="BoxText" />
        <span asp-validation-for="BoxText"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">List1</label>
        <input class="form-control" type="text" asp-for="List1" />
        <span asp-validation-for="List1"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">List2</label>
        <input class="form-control" type="text" asp-for="List2" />
        <span asp-validation-for="List2"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Photo</label>
        <input class="form-control" type="file" asp-for="Photo">
        <span asp-validation-for="Photo"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Current photo</label>
        <input class="form-control" type="hidden" name="Image" value="@Model.Image" />
        <img src="~/assets/images/project/@Model.Image" width="200" />
    </div>

    <input type="submit" class="btn btn-danger btn-block" value="update" />
</form>
