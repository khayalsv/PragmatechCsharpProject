@model IList<Blog>

@if (TempData["Success"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["Success"]
    </div>
}

<div class="table-responsive scrollbar">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">DateTime</th>
                <th scope="col">By From</th>
                <th scope="col">Name</th>
                <th scope="col">Link</th>
                <th scope="col">Image</th>

                <th class="text-end" scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Title</td>
                    <td>@item.DateTime</td>
                    <td>@item.byFrom</td>
                    <td>@item.Name</td>
                    <td>@item.Link</td>
                    <td>
                        <img width="200" height="150" src="~/assets/images/blog/@item.Image">
                    </td>

                    <td class="text-end">
                        <div>
                            <a href="/Admin/Blog/Edit/@item.ID"><i class="fas fa-edit"></i></a>
                            <a href="/Admin/Blog/Delete/@item.ID" onclick="return confirm('Are you delete?')"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

