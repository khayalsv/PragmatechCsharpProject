@model IList<Feature>

@if (TempData["Success"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["Success"]
    </div>
}

<div>
    <a href="/Admin/Feature/Create" class="btn btn-success">Add</a>
</div>

<div class="table-responsive scrollbar">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Icon</th>
                <th scope="col">Title</th>
                <th scope="col">Text</th>
                <th scope="col">Link</th>
                <th scope="col">Image</th>

                <th class="text-end" scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.ID</td>
                <td>@item.Icon</td>
                <td>@item.Title</td>
                <td>@item.Text</td>
                <td>@item.Link</td>
                <td>
                    <img width="200" height="150" src="~/assets/images/resources/@item.Image">
                </td>

                <td class="text-end">
                    <div>
                        <a href="/Admin/Feature/Edit/@item.ID"><i class="fas fa-edit"></i></a>
                        <a href="/Admin/Feature/Delete/@item.ID" onclick="return confirm('Are you delete?')"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

