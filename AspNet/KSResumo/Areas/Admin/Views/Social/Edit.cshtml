@model Social


<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Date</label>
        <textarea class="form-control" asp-for="Twitter"></textarea>
        <span asp-validation-for="Twitter" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Text</label>
        <textarea class="form-control" asp-for="Facebook"></textarea>
        <span asp-validation-for="Facebook" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Link</label>
        <input asp-for="Instagram" class="form-control" />
        <span asp-validation-for="Instagram" class="text-danger"></span>
    </div>


    <input type="submit" class="btn btn-danger btn-block" value="update" />
</form>



@section scripts{
    <partial name="_ValidationScriptsPartial" />

}
