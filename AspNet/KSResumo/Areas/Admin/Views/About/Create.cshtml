@model About

@{
    ViewData["Title"] = "Create";
}

@section styles{

    <style>
        label {
            color: green;
        }
    </style>
}


<div asp-validation-summary="All" style="color:red"></div>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Image</label>
        <input type="file" class="form-control" asp-for="Photo">
        <span asp-validation-for="Photo"></span>
    </div>

    <div class="mb-3">
        <label>Text</label>
        <textarea class="form-control" asp-for="Text"></textarea>
        <span asp-validation-for="Text" style="color:red"></span>

    </div>

    <div class="mb-3">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>

    </div>

    <div class="mb-3">
        <label>Birhday</label>
        <input type="text" class="form-control" asp-for="Birthday">
        <span asp-validation-for="Birthday"></span>

    </div>
    <div class="mb-3">
        <label>Age</label>
        <input type="text" class="form-control" asp-for="Age">
        <span asp-validation-for="Age"></span>

    </div>
    <div class="mb-3">
        <label>Address</label>
        <input type="text" class="form-control" asp-for="Address">
        <span asp-validation-for="Address"></span>

    </div>
    <div class="mb-3">
        <label>Phone</label>
        <input type="number" class="form-control" asp-for="Phone">
        <span asp-validation-for="Phone"></span>

    </div>
    <div class="mb-3">
        <label>Email</label>
        <input type="text" class="form-control" asp-for="Email">
        <span asp-validation-for="Email"></span>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />

}