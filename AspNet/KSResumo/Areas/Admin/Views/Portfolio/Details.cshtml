@model Portfolio
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Link</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">
                <img width="200" src="~/img/@Model.Image" />
            </th>
            <td>@Model.Name</td>
            <td>@Model.Link</td>
        </tr>
    </tbody>
</table>

