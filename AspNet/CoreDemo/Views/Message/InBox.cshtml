@using EntityLayer.Concrete

@model List<Message2> 


@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>InBox</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>By Sender</th>
        <th>Date</th>
        <th>Open Message</th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <th>@item.Id</th>
    <td>@item.Subject</td>
    <td>@item.SenderUser.Name</td>
    <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
    <td><a href="/Message/MessageDetails/@item.Id" class="btn btn-warning">Open Message</a></td>
</tr>
    }
</table>

<a href="/Message/SendMessage/" class="btn btn-primary">Create new blog</a>